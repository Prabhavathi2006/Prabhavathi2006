def find_element_locations(arr, element):
    locations = []
    count = 0
    for i in range(len(arr)):
        if arr[i] == element:
            locations.append(i + 1)
            count += 1
    return locations, count

# Input the number of elements in the list
n = int(input())

# Input the list elements
arr = [int(input()) for _ in range(n)]

# Input the element to search
element = int(input())

# Find locations and count
locations, count = find_element_locations(arr, element)

# Output the results
if count == 0:
    print(f"{element} is not present in the array.")
else:
    for loc in locations:
        print(f"{element} is present at location {loc}.")
    print(f"{element} is present {count} times in the array.")
